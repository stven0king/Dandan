<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/author_icon_item"
        android:layout_height="@dimen/author_icon_item"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:padding="0.5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/user_icon_bg" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/user_chaodai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝代"
            android:textSize="12dp"
            android:textColor="@color/gray_8f"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_alignParentBottom="true"/>

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_chaodai"
            android:layout_alignBottom="@id/user_chaodai"
            android:layout_toRightOf="@id/user_chaodai"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/gray_8f"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line"
            android:text="名称"
            android:textSize="12dp"
            android:textColor="@color/gray_8f"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/gray_cc"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>